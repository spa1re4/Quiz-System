<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx/21.0.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.quizsystem.QuizController">
    <!-- Используем Label для отображения текста -->
    <Label fx:id="questionText" layoutX="100" layoutY="50" />

    <!-- Вопросы и ответы -->
    <RadioButton fx:id="answer1" layoutX="100" layoutY="100" text="Answer 1" />
    <RadioButton fx:id="answer2" layoutX="100" layoutY="150" text="Answer 2" />
    <RadioButton fx:id="answer3" layoutX="100" layoutY="200" text="Answer 3" />
    <RadioButton fx:id="answer4" layoutX="100" layoutY="250" text="Answer 4" />

    <!-- Кнопка отправки ответа -->
    <Button text="Submit" layoutX="100" layoutY="300" onAction="#submitAnswer" />
</AnchorPane>
